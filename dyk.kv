<Main>:
    orientation:"vertical"
    padding:(30,18,30,8)
    spacing:10
    MDLabel:
        text:"Do you \nknow?"
        halign:"center"
        font_style:"H2"
        size_hint:(1,.4)
        font_name:"quatum"
    MDCard:
        elevation:6
        radius:60
        padding:30
        orientation:"vertical"   
        size_hint_x:.89
        pos_hint:{"center_x":.5}         
        MDLabel:
            id:fact_here
            halign:"center"
            font_style:"H5"
            font_name:"quatum"
            
    MDBoxLayout:
        size_hint:(1,.2)  
        spacing:15
        MDFillRoundFlatButton:
            text:"prev"
            on_release:root.prev()
            font_style:"Button"
        MDCard:
            radius:10
            elevation:10
            size_hint:(1,.57)
            MDIconButton:
                id:toggle_b
                icon:"youtube"
                on_release:root.open_youtube_channel()
            MDSeparator:
            MDIconButton:
                id:about
                icon:"theme-light-dark"
                on_release:app.toggle()
            MDSeparator
            MDIconButton:
                id:twitter
                icon:"twitter"
                on_release:root.open_twitter_account()
            MDSeparator
            MDIconButton:
                id:copy
                icon:"content-copy"
                on_release:root.copy()
                       
        MDFillRoundFlatButton:
            text:"next"
            font_style:"Button"
            on_release:root.next()

