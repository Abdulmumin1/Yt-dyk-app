<Main>:
    orientation:"vertical"
    padding:20
    spacing:10
    MDCard:
        padding:10
        elevation:20
        radius:10
        orientation:"vertical"
        MDLabel:
            text:"Do you \nknow"
            halign:"center"
            font_style:"H2"
        MDLabel:
            id:fact_here
            halign:"center"
            
    MDBoxLayout:
        size_hint:(1,.08)  
        spacing:10
        MDFillRoundFlatButton:
            text:"prev"
            on_release:root.prev()
        MDCard:
            radius:10
            elevation:10
            MDIconButton:
                id:toggle_b
                icon:"youtube"
                on_release:root.open_youtube_channel()
            MDIconButton:
                id:about
                icon:"theme-light-dark"
                on_release:app.toggle()
            MDIconButton:
                id:twitter
                icon:"twitter"
                on_release:root.open_twitter_account()
               
        MDFillRoundFlatButton:
            text:"next"
            on_release:root.next()

